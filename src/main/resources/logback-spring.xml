<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- 콘솔 출력 인코딩을 UTF-8로 설정 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>

    <!-- 개발 환경 설정 -->
    <springProfile name="dev">
        <!-- 기본은 INFO 레벨 -->
        <root level="INFO">
            <appender-ref ref="CONSOLE" />
        </root>
        
        <!-- Hibernate 모든 상세 로그 완전 비활성화 -->
        <logger name="org.hibernate" level="WARN" />
        <logger name="org.hibernate.orm" level="WARN" />
        <logger name="org.hibernate.orm.sql" level="WARN" />
        <logger name="org.hibernate.orm.results" level="WARN" />
        <logger name="org.hibernate.orm.results.loading" level="WARN" />
        <logger name="org.hibernate.orm.sql.ast" level="WARN" />
        <logger name="org.hibernate.orm.sql.exec" level="WARN" />
        <logger name="org.hibernate.SQL" level="WARN" />
        <logger name="org.hibernate.type" level="WARN" />
        <logger name="org.hibernate.stat" level="WARN" />
        
        <!-- Spring Data JPA 상세 로그 비활성화 -->
        <logger name="org.springframework.data.jpa" level="WARN" />
        <logger name="org.springframework.data.repository" level="WARN" />
        <logger name="org.springframework.orm.jpa" level="WARN" />
        <logger name="org.springframework.orm" level="WARN" />
        
        <!-- MariaDB 드라이버 모든 로그 비활성화 -->
        <logger name="org.mariadb" level="WARN" />
        <logger name="o.m.jdbc" level="WARN" />
        
        <!-- Spring Security 상세 로그 비활성화 -->
        <logger name="org.springframework.security" level="WARN" />
        <logger name="o.s.security" level="WARN" />
        
        <!-- Spring Framework 상세 로그 최소화 -->
        <logger name="org.springframework.web" level="WARN" />
        <logger name="org.springframework.boot" level="INFO" />
        <logger name="org.springframework.boot.autoconfigure" level="WARN" />
        <logger name="org.springframework.context" level="WARN" />
        <logger name="org.springframework.beans" level="WARN" />
        <logger name="org.springframework.transaction" level="WARN" />
        
        <!-- HikariCP 상세 로그 비활성화 -->
        <logger name="com.zaxxer.hikari" level="WARN" />
        
        <!-- Flyway 상세 로그 비활성화 -->
        <logger name="org.flywaydb" level="WARN" />
        
        <!-- Micrometer/Metrics 상세 로그 비활성화 -->
        <logger name="io.micrometer" level="WARN" />
        
        <!-- 애플리케이션 코드는 INFO 레벨로 (DEBUG는 필요시만) -->
        <logger name="com.example.jokerweb" level="INFO" />
        
        <!-- 특정 클래스만 DEBUG 허용 (필요시) -->
        <!-- <logger name="com.example.jokerweb.특정클래스" level="DEBUG" /> -->
    </springProfile>
</configuration>
